{
  "compilerOptions": {
    "baseUrl": "./",
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es2020", "dom"],
    "paths": {
      "src": ["src/*"]
    }
  },
  "include": ["src"]
}
